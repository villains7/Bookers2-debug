<h3>Follow Users</h3>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= user.name %></td>
        <td>フォロー数:<%= user.followings.count%></td>
        <td>フォロワー数:<%= user.followers.count%></td>
        <td><%= link_to 'Show', user_path(user.id) %></td>
        <% end %>
      </tr>
  </tbody>
  </tbody>
</table>